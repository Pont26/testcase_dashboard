@page "/projects"

<PageTitle>Projects</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Projects" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(projects)" TItem="TestCaseDashboard.Models.mydatabase.Project" RowSelect="@EditRow">
            <Columns>
     
                <RadzenDataGridColumn TItem="TestCaseDashboard.Models.mydatabase.Project" Property="Projectname" Title="Projectname">
                </RadzenDataGridColumn>
                 <RadzenDataGridColumn TItem="TestCaseDashboard.Models.mydatabase.Project" Property="ProjectSource" Title="Source"></RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestCaseDashboard.Models.mydatabase.Project" Property="Createdat" Title="Createdat">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestCaseDashboard.Models.mydatabase.Project" Property="Updatedat" Title="Updatedat">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestCaseDashboard.Models.mydatabase.Project" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="project">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="edit" Size="ButtonSize.Medium"
    Shade="Shade.Lighter" Variant="Variant.Flat"
    Click=@(args => EditRow(project)) @onclick:stopPropagation="true" />

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, project)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
